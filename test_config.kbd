(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
  tcp-server-address 127.0.0.1:5829
)

(defsrc
  esc q w e r    spc
  a s d f g      h j k l ;
)

(defalias
  ;; Good aliases - should parse correctly
  shift lsft
  control lctl
  
  ;; Problematic aliases - should trigger warnings/errors
  broken-tap (tap-hold-release-keys 200 150 (custom-macro weird-stuff) lsft ())
  missing-action (tap-hold-release-keys)
  unsupported-hold (tap-hold-release-keys 200 150 a (custom-unknown-action xyz) ())
  complex-unparsed (multi (defchords weird) (complex nested (stuff)))
  
  ;; Aliases that should work
  a (tap-hold-release-keys 200 150 a lsft ())
  s (tap-hold-release-keys 200 150 s lctl ())
  spc (tap-hold-release-keys 200 150 spc (layer-toggle nav) ())
)

(deflayer base
  esc q w e r    @spc
  @a @s d f g    h j k l ;
)

(deflayer nav  
  _ _ _ _ _        _
  _ _ _ _ _        left down up right _
) 